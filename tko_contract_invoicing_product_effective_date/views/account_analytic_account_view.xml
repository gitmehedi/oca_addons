<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="account_analytic_account_form" model="ir.ui.view">
        <field name="name">account.analytic.account</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="contract.account_analytic_account_recurring_form_form"/>
        <field name="arch" type="xml">
            <field name="recurring_next_date" position="after">
                <field name="end_date" required="1"/>
            </field>
            <xpath expr="//field[@name='recurring_invoice_line_ids']//field[@name='price_subtotal']" position="after">
                <field name="start_date"/>
                <field name="end_date"/>
            </xpath>
        </field>
    </record>
</odoo>