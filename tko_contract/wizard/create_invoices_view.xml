<odoo>

    <!-- menu_create from model form -->
    <record id="create_invoices_wizard_form" model="ir.ui.view">
        <field name="name">Create Invoices</field>
        <field name="model">create.invoices.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Menu">
                <group>
                    <p>
                        Confirm, if you want to create invoices for selected contracts.
                    </p>
                </group>
                <footer>
                    <button name="create_invoices" string="Create Invoices" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="create_invoices_from_analytic_account_actions"
                multi="True"
                key2="client_action_multi"
                name="Create Invoices"
                res_model="create.invoices.wizard"
                src_model="account.analytic.account"
                view_mode="form"
                target="new"/>
</odoo>