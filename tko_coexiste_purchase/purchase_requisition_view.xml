<odoo>
    <record model="ir.ui.view" id="purchase_request_form_analytic_account">
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h1/label" position="replace"/>
            <field name="origin" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="line_ids" position="attributes">
                <attribute name="attrs">{'readonly': [('is_editable','=', False)]}</attribute>
            </field>
            <xpath expr="//page//field[@name='line_ids']//tree//field[@name='product_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//page//field[@name='line_ids']//form//field[@name='product_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>